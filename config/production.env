# Production Environment Configuration
# This file contains production-specific settings
# IMPORTANT: Override sensitive values with environment variables or secrets management

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Production Security (MUST BE OVERRIDDEN)
# SECRET_KEY=OVERRIDE-WITH-SECURE-RANDOM-KEY
# JWT_SECRET_KEY=OVERRIDE-WITH-SECURE-RANDOM-KEY

# Production Database (MUST BE OVERRIDDEN)
# POSTGRES_URL=postgresql://user:password@prod-db-host:5432/agentic_rag
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Production Vector Database (MUST BE OVERRIDDEN)
# CHROMADB_URL=https://prod-chromadb-host:8000

# Production Redis (MUST BE OVERRIDDEN)
# REDIS_URL=redis://user:password@prod-redis-host:6379/0
REDIS_POOL_SIZE=20
REDIS_POOL_TIMEOUT=30

# Production Object Storage (MUST BE OVERRIDDEN)
# MINIO_ENDPOINT=s3.amazonaws.com
# MINIO_ACCESS_KEY=OVERRIDE-WITH-AWS-ACCESS-KEY
# MINIO_SECRET_KEY=OVERRIDE-WITH-AWS-SECRET-KEY
MINIO_SECURE=true
MINIO_REGION=us-east-1

# Production AI Services (MUST BE OVERRIDDEN)
# OPENAI_API_KEY=OVERRIDE-WITH-PRODUCTION-KEY
# OPENAI_ORGANIZATION=OVERRIDE-WITH-PRODUCTION-ORG

# Production Features
ENABLE_DOCS=false
ENABLE_REDOC=false
ENABLE_OPENAPI=false

# Production CORS (restrictive)
CORS_ORIGINS=["https://your-production-domain.com"]
CORS_ALLOW_CREDENTIALS=true

# Production Monitoring
PROMETHEUS_ENABLED=true
OTEL_ENABLED=true
# OTEL_ENDPOINT=https://your-otel-collector

# Production Performance
API_WORKERS=4
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Production Logging
LOG_FORMAT=json
LOG_FILE=/var/log/agentic-rag/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Production Security
PASSWORD_HASH_ROUNDS=14
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
