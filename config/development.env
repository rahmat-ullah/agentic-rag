# Development Environment Configuration
# This file contains development-specific settings

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Development Security (NOT FOR PRODUCTION)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production

# Development Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_rag_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_ECHO=true

# Development Vector Database
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# Development Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis

# Development Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Development AI Services (requires API keys)
# OPENAI_API_KEY=your-dev-openai-api-key
# OPENAI_ORGANIZATION=your-dev-openai-org

# Development Features
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true
ENABLE_PROFILER=true

# Development CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]

# Development Monitoring
PROMETHEUS_ENABLED=false
OTEL_ENABLED=false
