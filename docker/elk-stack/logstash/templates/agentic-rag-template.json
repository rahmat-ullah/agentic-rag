{
  "index_patterns": ["agentic-rag-logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "5s",
      "index.lifecycle.name": "agentic-rag-logs-policy",
      "index.lifecycle.rollover_alias": "agentic-rag-logs"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "processed_at": {
          "type": "date"
        },
        "level": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "service": {
          "type": "keyword"
        },
        "tenant_id": {
          "type": "keyword"
        },
        "tenant": {
          "type": "keyword"
        },
        "request_id": {
          "type": "keyword"
        },
        "request": {
          "type": "keyword"
        },
        "trace_id": {
          "type": "keyword"
        },
        "trace": {
          "type": "keyword"
        },
        "span_id": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "cluster": {
          "type": "keyword"
        },
        "http_method": {
          "type": "keyword"
        },
        "http_status": {
          "type": "keyword"
        },
        "http_url": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "db_query": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "db_duration": {
          "type": "float"
        },
        "error": {
          "type": "text"
        },
        "error_details": {
          "type": "object",
          "properties": {
            "type": {
              "type": "keyword"
            },
            "message": {
              "type": "text"
            },
            "stack": {
              "type": "text"
            }
          }
        },
        "tags": {
          "type": "keyword"
        },
        "fields": {
          "type": "object"
        },
        "docker": {
          "type": "object",
          "properties": {
            "container": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "name": {
                  "type": "keyword"
                },
                "image": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "kubernetes": {
          "type": "object",
          "properties": {
            "pod": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "keyword"
                },
                "namespace": {
                  "type": "keyword"
                }
              }
            },
            "container": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "keyword"
                }
              }
            }
          }
        }
      }
    }
  },
  "composed_of": [],
  "priority": 500,
  "version": 1,
  "_meta": {
    "description": "Template for Agentic RAG system logs"
  }
}
